<%- include("header") -%>

<body>
    <div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
    </div>

    <div class="box">

        <% for(var i=0; i<newitemlists.length; i++) { %>

        <div class="item">
            <input type="checkbox">
            <p> <%= newitemlists[i] %> </p>
        </div>
        <% } %>

        <form class="item" method="POST" action="/">
            <input type="text" placeholder="New Item" name="newitem">
            <button type="submit" name = "list" value = <%=listTitle%>>+</button>
        </form>
    </div>

</body>
<%- include("footer") -%>
</html>